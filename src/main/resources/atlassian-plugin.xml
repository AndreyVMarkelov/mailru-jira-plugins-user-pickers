<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-logo">/images/michen.png</param>
        <param name="plugin-icon">/images/michen.png</param>
        <param name="vendor-icon">/images/icon.png</param>
        <param name="vendor-logo">/images/logo.png</param>
    </plugin-info>

    <resource type="i18n" name="i18n" location="i18n.adrolegroupuser"/>

    <customfield-type key="single_role_group_usercf" 
                      name="Project Role or Group user picker"
                      class="ru.mail.jira.plugins.up.RoleGroupUserField">
        <description>This field allows to choose an user from project roles or groups</description>
        <resource type="velocity" name="view" location="templates/aduserpicker/single-rolegroup-user-view.vm"/>
        <resource type="velocity" name="edit" location="templates/aduserpicker/single-rolegroup-user-edit.vm"/>
        <resource type="velocity" name="column-view" location="templates/aduserpicker/single-rolegroup-user-column-view.vm"/>
        <resource type="velocity" name="xml" location="templates/aduserpicker/single-rolegroup-user-xml.vm"/>
    </customfield-type>

    <customfield-searcher key="single_role_group_usercf_searcher"
                          name="User Picker (Pop-up window)"
                          class="com.atlassian.jira.issue.customfields.searchers.UserPickerSearcher">
        <description>Allow to search for a user using a userpicker.</description>
        <resource type="velocity" name="label" location="templates/aduserpicker/single-rolegroup-user-label.vm"/>
        <resource type="velocity" name="search" location="templates/aduserpicker/single-rolegroup-user-search.vm"/>
        <resource type="velocity" name="view" location="templates/aduserpicker/single-rolegroup-user-view-search.vm"/>
        <valid-customfield-type package="${project.groupId}.${project.artifactId}" key="single_role_group_usercf"/>
    </customfield-searcher>

    <web-item key="role-group-usercf-configuration" name="Role Group User Fields configuration" section="system.admin/globalsettings" weight="95">
        <label key="jrole-group-usercf.admin.title"/>
        <condition class="com.atlassian.jira.plugin.webfragment.conditions.JiraGlobalPermissionCondition">
            <param name="permission">admin</param>
        </condition>
        <link linkId="role-group-usercf-configuration">/secure/UserPickerAdminAction!default.jspa</link>
    </web-item>

    <webwork1 key="role-group-usercf-action" name="Role Group User Fields configure action" class="java.lang.Object">
        <actions>
            <action name="ru.mail.jira.plugins.up.UserPickerAdminAction" alias="UserPickerAdminAction">
                <view name="input">/templates/aduserpicker/adrolegroupuser-config.vm</view>
                <view name="success">/templates/aduserpicker/adrolegroupuser-config.vm</view>
            </action>
        </actions>
    </webwork1>

    <web-resource key="jrole-group-usercf" name="Role Group User Fields Resources">
        <transformation extension="js">
            <transformer key="jsI18n"/>
        </transformation>
        <resource type="download" name="aduserpicker.js" location="media/aduserpicker.js"/>
        <resource type="download" name="aduserpicker.css" location="media/aduserpicker.css"/>
        <resource type="download" name="jquery.json-2.3.js" location="media/jquery.json-2.3.js"/>
    </web-resource>

    <!-- Rest resources -->
    <rest key="role-group-usercf-resources" path="/rolegroupusercfws" version="1.0">
        <description>Provides the REST resource for the "ru.mail.jira.plugins.userpickers" plugin.</description>
    </rest>
    <!-- End rest -->

    <!-- Components -->
    <component key="role-group-usercf-manager" name="Manager of role group user fields" class="ru.mail.jira.plugins.up.PluginDataImpl"/>
    <component-import key="pluginSettingsFactory">
        <interface>com.atlassian.sal.api.pluginsettings.PluginSettingsFactory</interface>
    </component-import>
    <component-import key="applicationProperties">
        <interface>com.atlassian.sal.api.ApplicationProperties</interface>
    </component-import>
</atlassian-plugin>
